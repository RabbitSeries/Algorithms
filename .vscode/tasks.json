{
    "version": "2.0.0",
    "tasks": [
        //! [Windows] C/C++: g++.exe build active file
        {
            "type": "shell",
            "label": "[Windows] C/C++: g++.exe build active file",
            "windows": "cmd.exe",
            "command": "g++.exe",
            "args": [
                "-std=c++17",
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}\\.vscode\\${fileBasenameNoExtension}.exe"
            ],
            "presentation": {
                "reveal": "silent",
            },
            "options": {
                "cwd": "${fileDirname}",
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "g++, c++17, defalut."
        },
        //! [Linux] C/C++: g++.exe build active file
        {
