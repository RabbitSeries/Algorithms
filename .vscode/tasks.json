            },
            "detail": "g++, c++17"
        },
        //! cl.exe build active file
        {
            "type": "shell",
            "label": "cl.exe build active file",
            "windows": {
                "options": {
                    "shell": {
                        "executable": "cmd.exe",
                        "args": [
                            "/C",
                            // The path to VsDevCmd.bat depends on the version of Visual Studio you have installed.
                            "\"D:/Program Files/Microsoft Visual Studio/2022/Professional/Common7/Tools/VsDevCmd.bat\"",
                            "-host_arch=x64",
                            "-arch=x64",
                            "&&"
                        ]
                    }
                }
            },
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/std:c++17",
                "${file}",
                // Specify the directory. No empty characters after /Fo. Use ":" to add sperators.
                // "/Fo${workspaceFolder}\\.vscode\\debug\\${relativeFileDirname}\\${fileBasenameNoExtension}",
                // "/Fo:",
                // "${workspaceFolder}\\.vscode\\debug\\${relativeFileDirname}\\${fileBasenameNoExtension}",
                "/Fo${workspaceFolder}\\.vscode\\${fileBasenameNoExtension}.obj",
                "/Fe${workspaceFolder}\\.vscode\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
            },
            "detail": "Task generated by user."
        },
        // ![OpenCV] [Debug] [MSVC] C/C++: cl.exe build active file workspace
        {
            "type": "shell",
            "label": "[OpenCV] [Debug] C/C++: cl.exe build active file workspace",
            "windows": {
                "options": {
                    "shell": {
                        "executable": "cmd.exe",
                        "args": [
                            "/C",
                            // "\"D:/Program Files/Microsoft Visual Studio/2022/Professional/VC/Auxiliary/Build/vcvars64.bat\"",
                            "\"D:/Program Files/Microsoft Visual Studio/2022/Professional/Common7/Tools/VsDevCmd.bat\"",
                            "-host_arch=x64",
                            "-arch=x64",
                            "&&"
                        ]
                    }
                }
            },
            // vscode use a strange command verification mechanism. make sure of using commands that is declared in system ${env:PATH}
            // You may look at the command mechanism described in 
            //  <https://github.com/microsoft/vscode-docs/pull/2934>
            // Then look for implementing detail in
            // <https://github.com/microsoft/vscode/blob/b15d1a9542d26d06d12bb7807b85cef738a00a28/src/vs/workbench/contrib/tasks/common/taskSystem.ts#L96>
            "command": "cl.exe",
            "args": [
                // cl.exe /O2 /DNDEBUG /MD /std:c++17 source.cpp /Fo"Release\\" /Fe"Release\\program.exe" [release].
                "/Zi",
                "/EHsc",
                "/Od",
                "/MDd",
                "/std:c++17",
                // "${file}",
                // "${fileDirname}/*.cpp",
                "${fileDirname}/*.cpp",
                // "${fileDirname}/solution.cpp",
                "/I${fileDirname}",
                "/ID:\\Build_Tool_Lib\\opencv\\opencv4.10.0\\build\\include",
                // "/Fo${workspaceFolder}\\.vscode\\${fileBasenameNoExtension}.obj",
                "/Fe${workspaceFolder}\\.vscode\\${fileWorkspaceFolderBasename}.exe",
                "/link",
                "/DEBUG",
                "/LIBPATH:D:\\Build_Tool_Lib\\opencv\\opencv4.10.0\\build\\x64\\vc16\\lib",
                "opencv_world4100d.lib",
                // "opencv_world4100.lib", //For Release mode.
                // "/machine:x64",
                // Specify the directory. No empty characters after /Fo. Use ":" to add sperators.
                // "/Fo${workspaceFolder}\\.vscode\\debug\\${relativeFileDirname}\\${fileBasenameNoExtension}",
                // "/Fo:",
                // "${workspaceFolder}\\.vscode\\debug\\${relativeFileDirname}\\${fileBasenameNoExtension}",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
            },
            "detail": "OpenCV x64_x64 cl.exe Debug mode"
        },
